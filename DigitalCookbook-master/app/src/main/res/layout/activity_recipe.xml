<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="flipper">


    <Button
        android:id="@+id/unfavorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_unfave" />

    <Button
        android:id="@+id/favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/button_fave"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/front_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/front_recipe" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/back_recipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <include layout="@layout/back_recipe" />

    </FrameLayout>


</FrameLayout>
